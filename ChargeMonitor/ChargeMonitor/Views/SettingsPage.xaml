<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChargeMonitor.Views.SettingsPage"
             Title="" Style="{StaticResource LargeLabel}">
    
    <Grid RowDefinitions="Auto,*" RowSpacing="5">

        <!--< Header Row >-->
        <Grid 
            ColumnDefinitions="Auto,Auto,*"
            Grid.Row="0" 
            BackgroundColor="{AppThemeBinding Light={StaticResource BarLight}, Dark={StaticResource BarDark}}" >

            <ImageButton 
                    Grid.Column="0"
                    Source="back_arrow.svg"
                    HeightRequest="60"
                    WidthRequest="60"
                    Padding="5"
                    Command="{Binding GoToMainPageCommand}"/>
            
            <Label
                    Grid.Column="1"
                    Text="Settings" Style="{StaticResource LargeLabel}" FontAttributes="Bold"               
                    HorizontalOptions="Start" 
                    HorizontalTextAlignment="Start"
                    VerticalTextAlignment="Center" 
                    Padding="10"/>

        </Grid>

        <!--< Main content >-->
        <VerticalStackLayout>
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>